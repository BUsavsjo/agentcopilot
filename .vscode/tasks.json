{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Doctor",
      "type": "shell",
      "command": "powershell",
      "args": ["-NoProfile", "-ExecutionPolicy", "Bypass", "-File", "${workspaceFolder}/scripts/doctor.ps1"],
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": []
    },
    {
      "label": "Test",
      "type": "shell",
      "command": "npm",
      "args": ["test"],
      "windows": {
        "command": "npm.cmd"
      },
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": ["$eslint-stylish"]
    },
    {
      "label": "Lint",
      "type": "shell",
      "command": "npm",
      "args": ["run", "lint"],
      "windows": {
        "command": "npm.cmd"
      },
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": ["$eslint-stylish"]
    },
    {
      "label": "Run",
      "type": "shell",
      "command": "npm",
      "args": ["start"],
      "windows": {
        "command": "npm.cmd"
      },
      "isBackground": true,
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": {
        "pattern": {
          "regexp": "^.*$",
          "file": 1,
          "location": 2,
          "message": 3
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^.*",
          "endsPattern": ".*listening.*"
        }
      }
    },
    {
      "label": "QA",
      "dependsOn": ["Test", "Lint"],
      "problemMatcher": []
    },
    {
      "label": "All",
      "dependsOn": ["Doctor", "QA"],
      "problemMatcher": []
    }
  ]
}
